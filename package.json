{
  "private": true,
  "name": "codemirror-demo",
  "version": "0.1.0",
  "license": "MIT",
  "publicPath": "/codemirror-demo/",
  "scripts": {
    "build": "NODE_OPTIONS=--openssl-legacy-provider preact build --dest=build/codemirror-demo --no-esm --no-sw",
    "serve": "sirv build --cors --single",
    "dev": "NODE_OPTIONS=--openssl-legacy-provider preact watch",
    "lint": "eslint src"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "preact",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "build/"
    ]
  },
  "dependencies": {
    "@codemirror/commands": "^6.1.2",
    "@codemirror/language": "^6.3.2",
    "@codemirror/language-data": "^6.1.0",
    "@codemirror/legacy-modes": "^6.3.1",
    "@preact/signals": "^1.1.2",
    "@codemirror/state": "^6.1.4",
    "@codemirror/theme-one-dark": "^6.1.0",
    "@codemirror/view": "^6.7.1",
    "@replit/codemirror-emacs": "^6.0.0",
    "@replit/codemirror-vim": "^6.0.4",
    "codemirror": "^6.0.1",
    "preact": "^10.10.0",
    "preact-render-to-string": "^5.2.1"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "eslint": "^8.20.0",
    "eslint-config-preact": "^1.3.0",
    "jest": "^27.5.1",
    "jest-preset-preact": "^4.0.5",
    "preact-cli": "^3.4.0",
    "sirv-cli": "^2.0.2",
    "typescript": "^4.5.2"
  }
}